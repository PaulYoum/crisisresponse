<section class="solo-page incident-full">
  <a class="section-body close-page" onclick="window.close()">Close</a>

  <div class="section-body">
    <h1><%= t("incidents.show.title") %></h1>

    <div class="incident-full-date"><%= l(@incident.reported_at.to_date) %></div>

    <ul class="incident-full-behaviors">
      <% @incident.behaviors.each do |behavior| %>
        <li class="incident-behavior">
          <%= t("incidents.behaviors.#{behavior}") %>
        </li>
      <% end %>

      <% @incident.dispositions.each do |disposition| %>
        <li class="incident-disposition">
          <%= t("incidents.dispositions.#{disposition}") %>
        </li>
      <% end %>
    </ul>

    <div class="incident-full-go-number">
      See GO # <%= @incident.formatted_go_number %>
    </div>

    <div class="incident-full-narrative">
      <%= simple_format @incident.narrative.to_s %>
    </div>
  </div>

  <a class="section-body close-page" onclick="window.close()">Close</a>
</section>
