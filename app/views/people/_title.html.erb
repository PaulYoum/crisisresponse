<% else %>

  <section class="page-title">
    <h1 class="section-title">Basic Profile</h1>

    <span class="page-title-action">
      <%= link_to(
        t("people.show.new_plan"),
        drafts_path(person_id: person.id),
        method: :post,
      ) %>
    </span>
  </section>
<% end %>
