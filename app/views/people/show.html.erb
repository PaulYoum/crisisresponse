<%= content_for(:header) do %>
  <%= render "identity", person: @person %>
<% end %>

<div class="main">
  <div class="left-column">
    <%= render "sections/images", person: @person %>
    <%= render "sections/profile", person: @person %>
    <%= render "sections/location", person: @person %>

    <% if @person.active_plan %>
      <% @person.active_plan.contacts.each do |contact| %>
        <%= render "sections/contact", contact: contact %>
      <% end %>

      <%= render "sections/about", person: @person %>
    <% end %>
  </div>

  <div class="right-column">
    <%= render "title", person: @person, response_plan: @person.active_plan %>

    <% if @person.active_plan %>
      <%= render "sections/deescalation_techniques", plan: @person.active_plan %>
      <%= render "sections/triggers", plan: @person.active_plan %>
      <%= render "sections/response_strategies", plan: @person.active_plan %>
      <%= render "sections/background_info", plan: @person.active_plan %>
      <%= render "sections/about", person: @person %>
    <% end %>
  </div>
</div>
