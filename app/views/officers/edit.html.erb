<section class="form">
  <div class="section-header section-header-blue">
    Edit Officer Profile
  </div>

  <div class="section-body">
    <p class="officer-form-help-text">
      <%= t("officers.edit.help_text") %>
    </p>

    <%= simple_form_for(@officer) do |f| %>
      <%= f.input :name %>
      <%= f.input :phone %>
      <%= f.input(
        :role,
        collection: Officer::ROLES,
        label_method: lambda{ |role| t("officers.roles.#{role}") },
        include_blank: false,
      ) %>
      <%= f.submit %>
    <% end %>
  </div>
</section>
