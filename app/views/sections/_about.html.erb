<section class="about">
  <div class="section-header section-header-muted">
    <div class="section-header-text">
      <span class="section-title">About the Plan</span>
    </div>
  </div>

  <div class="section-body">
    <div class="about-label author-label">Prepared by</div>
    <div class="author-name"><%= @response_plan.author.name %></div>
    <div class="author-unit">Crisis Response Unit</div>

    <div class="about-label date-label">Prepared on</div>
    <div class="created-date"><%= l @response_plan.updated_at.to_date %></div>

    <div class="about-label approver-label">Approved by</div>
    <div class="approver-name">
      <div><%= @response_plan.approver.name %></div>
    </div>
  </div>

  <%= render "section_dialer", phone: ENV.fetch("ADMINISTRATOR_CONTACT_PHONE") %>
</section>
