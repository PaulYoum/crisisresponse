<section class="safety-concerns">
  <div class="section-header
    <%= @response_plan.safety_concerns.any? ? "section-header-red" : "section-header-grey"  %>
    ">
    <%= image_tag("section-icons/safety_concerns.svg", class: "section-icon") %>
    <div class="section-header-text">
      <span class="section-title">Officer Safety</span>
    </div>
  </div>

  <div class="section-body">
    <% if @response_plan.safety_concerns.any? %>
      <% @response_plan.safety_concerns_by_category.each do |category, concerns| %>
        <div class="concern_category concern_category-<%= category %>">
          <div class="safety-concern-icons">
            <%= image_tag("safety_icons/#{category}-#{theme}.svg") %>

            <% if concerns.any?(&:physical?) %>
              <span class="physical-threat-icon">P</span>
            <% end %>

            <% if concerns.any?(&:threat?) %>
              <span class="physical-threat-icon">T</span>
            <% end %>
          </div>

          <ul>
            <% concerns.each do |concern| %>
              <li><%= concern.description %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    <% else %>
      <p>Officer safety information is still under development.</p>

      <p>
      For information about <%= @response_plan.person.first_name %>,
      please see the <strong>Response Plan</strong> section below.
      </p>
    <% end %>
  </div>
</section>
