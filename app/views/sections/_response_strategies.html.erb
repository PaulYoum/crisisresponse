<section class="response-plan">
  <div class="section-header">
    <%= image_tag("section-icons/response-plan.svg", class: "section-icon") %>
    <div class="section-header-text">
      <span class="section-title">Response Plan</span>
    </div>
  </div>

  <div class="section-body">
    <% @response_plan.response_strategies.each do |strategy| %>
      <div class="response-strategy mobile-collapsed">
        <h3><%= strategy.title %></h3>
        <p><%= simple_format strategy.description %></p>
        <a href="#" class="expand" data-text-swap="Hide">Read More</a>
      </div>
    <% end %>
  </div>
</section>
